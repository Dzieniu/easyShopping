<div ng-if="meals.length==0" style="text-align:center;font-size:17px;font-weight:bold"> Nie masz żadnych posiłków.</div>
<div class="mealName edit" ng-repeat="meal in meals" ng-init="mealindex=$index">
	{{meal.name}}
	<span id="showContent" class="glyphicon glyphicon-chevron-down" ng-model="dupa" ng-click="arrowClicked(mealindex); showme=!showme" style="float:right;top:3px"></span>
	<div ng-show="showme">
		<div ng-repeat="product in meal.products"  >
			{{product.name}} - {{product.count}} - {{product.unit}}
			<span  class="glyphicon glyphicon-minus edititem" title="Funkcjonalność w budowie"></span>
			<span   class="glyphicon glyphicon-edit edititem" title="Funkcjonalność w budowie"></span>
		</div>	
		<button ng-click="removeMeal(meal)">Usuń posiłek</button>
	</div>
</div>