<div class="rightBar" >
	<div id="content" >
		<div ng-repeat="product in list">
				{{product.name}} / {{product.count}} / {{product.unit}} 
		</div>
	</div>
	<div id="hideButton" ng-click="dupa=!dupa" >
		<span class="glyphicon glyphicon-th-list"></span>
	</div>
</div>

<div >
	<div class="col-md-3" ng-repeat="meal in meals" ng-click="addToMealsList($index)" >
    <div class="panel panel-primary" style="">
      <div class="panel-heading">{{meal.name}}</div>
      <div class="panel-body" ng-show="showIngredients==true">
				<ul ng-repeat="item in meal.products">
				  <li>{{item.name}}</li>
				</ul>
      </div>
    </div>
	</div>
</div>

<div  >
	<div class="col-md-12">
